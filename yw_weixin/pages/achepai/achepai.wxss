/* pages/chepai/chepai.wxss */
page{height: 100%;overflow: hidden;background: #EEEEEE;}
.pages_header{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pages_header_top{
  width:100%;
  height: 660rpx;
  position: relative;

  /* background: red; */
}

.tips{
  text-align: center;
  margin: 60rpx 0;
  font-size: 12pt;
  color: #888888;
}
 
.plate-input-flag{
  width: 100%;
  display: block;
  text-align: right;
  align-items: flex-end;
  margin: 30rpx 10rpx 30rpx 0;
  color: green;
}
 .plate-input-flag>text{
   padding-right: 20rpx;
 }
.plate-input-body {
  /*border: 1px solid red;*/
  width: 90%;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 30rpx;

  
}
 .pages_box{width: 90%;height: 460rpx;background: #ffffff;margin: 0 auto;margin-top: 150rpx;overflow: hidden;}
.plate-input-content {
  display: flex;
  flex-direction: row;
  height: 100rpx;
}
.plate-nums-foc{
    flex: 1;
    border: 2rpx solid #23BFB2;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 100%;
    box-sizing: border-box;
    box-shadow: 2rpx 2rpx 2rpx #888888;
    border-radius: 4rpx;
    transition: all 1S;
}

.cp{transition: all 1S;}
 
.plate-nums-first{
     flex: 1;
    border: 2rpx solid #ccc;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 100%;
    box-sizing: border-box;
    border-radius: 8rpx;
}
.plate-num-text {
    flex: 1;
    line-height: 100rpx;
    height: 100%;
    box-sizing: border-box;
    border-radius: 8rpx;
    padding: 4rpx;
    color: #23BFB2;
    font-size: 40rpx;
    font-weight: normal;
}
 
.new-plate-input-content{
  display: flex;
  flex-direction: row;
  height: 100rpx;
}
 
 
.kb_top {
    align-content: relative;
    width: 100%;
    height: 74rpx;
    background: #fff;
    border-top: solid #ebebeb 2rpx;
    border-bottom: 15rpx solid #d7d8dc;
}
 
.keyboard {
    z-index: 9999;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: auto;
    background: #d7d8dc;
    display: flex;
    flex-wrap: wrap;
    border-bottom: 15rpx solid #d7d8dc;
}
 
.td {
    font-family: "微软雅黑";
    flex-grow: 1;
    text-align: center;
    font-size: 32rpx;
    height: 86rpx;
    line-height: 80rpx;
    background: #fff;
    margin: 10rpx 5rpx;
    color: #333;
    border-radius: 10rpx 10rpx 10rpx 10rpx;
    box-shadow: 0rpx 2rpx 0rpx #a9a9a9;
}
 
.td_nor {
    flex: 1 1 6%;
}
 
.td_num {
    flex: 1 1 8%;
}
 
.td_spec {
    flex: 1 1 12%;
}
 
.board_bg {
    box-shadow: 0 0 0 #e5e5e5;
    background: #e5e5e5;
}
 
.del-first {
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    width: 137rpx;
    height: 86rpx;
    background-color: #fff;
    box-shadow: 0rpx 2rpx 0rpx #a9a9a9;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10rpx;
}
 
.del-hover {
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    width: 137rpx;
    height: 86rpx;
    background-color: #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10rpx;
    box-shadow: 0 0 0 #e5e5e5;
}
 
.del-img {
    display: block;
    width: 46rpx;
    height: 38rpx;
}

.but{width: 80%;background: #23BFB2;color: #ffffff;font-size: 32rpx;letter-spacing: 1rpx;z-index: 99999;}
.qq{width: 100%;}
.tishi{font-size: 24rpx;text-align: center;margin-top: 30rpx;}
.back{width: 100%;display: block;position: absolute;top: 0;left: 0;z-index: -99;}
