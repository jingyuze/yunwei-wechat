/* pages/car_rent/car_rent.wxss */
page {
  height: 100%;
  overflow: hidden;
  background-color:  #ecf2f2;
  position: relative;
}
.zj{
  width: 100%;
 display: flex;
  height:92vh;
  flex-direction: column;
  overflow: hidden;
}
.header_add{
    width: 100%;
 display: flex;
  height:8vh;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  bottom: 0rpx;
  background: #23bfb2;

}
.q{width: 50rpx;margin-right: 10rpx;}
.box {
  background: #fff;
  width:95%;
  display: flex;
  box-shadow: 5rpx 5rpx 5rpx #C9C9C9;
  margin: 0 auto;
  flex-direction: column;
  margin-top: 30rpx;
 align-items: center;
}
.box:last-child{margin-bottom: 30rpx;}
.header{height: 60rpx;width: 98%;display: flex;align-items: center;justify-content: center;color: #23BFB2;font-size: 32rpx;line-height: 60rpx;border-bottom: 1rpx solid #BDBBB8;position: relative;}
.content{width: 95%;margin: 0 auto;overflow: hidden;}
.fixnews{position: absolute;right: 20rpx;font-size: 24rpx;color:#BDBBB8;display: block;height: 60rpx;top: 0;}
.wenzi {
  display: flex;
  padding: 10rpx 20rpx 18rpx 10rpx;
  font-size: 30rpx;
  width:90%;
  height: 40rpx;
  justify-content: space-between;
  margin: 0 auto;
  position: relative;
}
.renewal{display: inline-block;background: #EF8C21;color: #ffffff;border-radius: 10rpx;width: 80rpx;height: 40rpx;text-align: center;line-height: 40rpx;font-size: 26rpx;position: absolute;right: 20rpx;}
.butt{width: 100%;height: 100rpx;display: flex;flex-direction: row;align-items: center;justify-content: space-around;}
.but {
  width: 230rpx;
  height: 60rpx;
  display: inline-block;
  background: #23bfb2;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
}